{% extends 'base.html.twig' %}
{% block main %}

<!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">WELCOME !</h1>
        <div class="list-group">
        {% for categorie in categories %}
            <a href="{{ path('ecommerce_products_by_categorie',{'id':categorie.id}) }}" class="list-group-item">{{ categorie.name }}</a>
        {% endfor %}
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-1slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="couv1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="couv2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="couv3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row">
        {% for product in products %}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="{{ path('ecommerce_product_details',{'id':product.id}) }}"><img class="card-img-top" src="{{ asset(product.image) }}" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="{{ path('ecommerce_product_details',{'id':product.id}) }}">{{ product.name }}</a>
                </h4>
                <h5>{{ product.price }}DT</h5>
                <p class="card-text">{{ product.description }}</p>
              </div>
              {% if product.stock >0 %}
              <div class="card-footer">
                <a href="{{ path('ecommerce_add_cart',{'id':product.id}) }}" class="btn btn-primary btn-xg">Add to cart</a>
              </div>
              {% elseif product.stock == 0 %}
                    <span class="alert alert-danger text-center"><strong>Out Of Stock</strong></span>
              {% endif %}
              
            </div>
          </div>
          {% endfor %}


        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

{% endblock %}
